%h2 Listing users

%table.table.table-striped
  %thead
    %tr
      %th Email
      %th Role
      - if can_manage_user?
        %th
        %th
        %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.role
        - if can_manage_user?
          %td= link_to 'Show', user
          %td= link_to 'Edit', edit_user_path(user)
          %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }

- if is_user_admin?
  %br
  = link_to 'New User', new_user_path, class: "btn btn-primary"
